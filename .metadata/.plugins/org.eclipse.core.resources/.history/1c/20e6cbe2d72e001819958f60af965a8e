package parser;

import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.util.ArrayList;
import java.util.Scanner;
import java.util.TreeMap;

import objects.*;

public class RunTimeMethods
{
    
    public TreeMap<String, FOLElement> names = new TreeMap<String, FOLElement>();
    // 0 = objects
    // 1 = variables
    // 2 = functions
    // 3 = terms

    FOLParser parser = new FOLParser();

    public void FileInput()
    {
        Scanner scan = new Scanner(System.in);

        System.out.println("Input file name/location:");
        Path path = Paths.get(scan.nextLine());
        while (Files.notExists(path))
        {
            System.out.println("Cannot find file, try again");
            path = Paths.get(scan.nextLine());
        }

        parser.ParseFile(path.toString(), objects, variables, functions, formulas, names);

        scan.close();
    }

    public void waitForInput() //TODO: Just a proxy for the meantime
    {
        Scanner scan = new Scanner(System.in);
        while (true)
        {
            System.out.println("Awaiting Input:");
            System.out.println(scan.nextLine());
            if (true)
            {
                break;
            }
        }

        scan.close();
    }

    public void printListToConsole(int whichList)
    {
        if (whichList == 0 || whichList == 4)
        {
            System.out.println("Objects:");
            for(FOLObject ob : objects)
                System.out.println(ob.name);
                
        }
        if (whichList == 1 || whichList == 4)
        {
            System.out.println("Variables:");
            for(FOLVariable va : variables)
                System.out.println(va.name);
        }
        if (whichList == 2 || whichList == 4)
        {
            System.out.println("Functions:");
            for(FOLFunctionPrototype fu : functions)
                System.out.println(fu.name + " ["+fu.number+"]");
        }
        if (whichList == 3 || whichList == 4)
        {
            System.out.println("Formulas:");
            for(FOLFormula fo : formulas)
                System.out.println("Formula: " + fo.content);
        }
    }
}
